            </dependency>

            <dependency>
                <groupId>org.jenkins-ci.plugins</groupId>
                <artifactId>cloudbees-folder</artifactId>
                <version>${cloudbees-folder.version}</version>
                <exclusions>
                    <exclusion>
                        <groupId>org.jenkins.plugins</groupId>
